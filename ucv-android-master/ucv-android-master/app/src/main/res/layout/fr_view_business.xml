<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/fondo_card"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:visibility="gone"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edtFind"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="0.8"
            android:drawableLeft="@drawable/ic_find_black"
            android:drawablePadding="8dp"
            android:ems="10"
            android:hint="@string/find"
            android:imeOptions="actionSearch"
            android:inputType="textPersonName" />

        <ImageButton
            android:id="@+id/btnFilter"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_weight="0.2"
            android:background="@android:color/transparent"
            android:tint="@color/colorAccentDark"
            app:srcCompat="@drawable/ic_filter_white" />
    </LinearLayout>

    <Button
        android:id="@+id/btnMap"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/button_facebook"
        android:text="Ver negocios cerca de mi"
        android:textAllCaps="false"
        android:visibility="gone"
        android:textColor="@color/white" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rcCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ListView
        android:id="@+id/lvBusiness"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="28dp"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:headerDividersEnabled="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView10"
            app:srcCompat="@drawable/ic_empty"
            android:layout_width="match_parent"
            android:layout_height="120dp" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="PÃ³ximamente disfrutaras de los beneficios de este negocio"
            android:textColor="@color/colorAccentDark"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>