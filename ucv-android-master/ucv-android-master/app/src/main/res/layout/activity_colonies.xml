<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Colonies">

    <ImageView
        android:id="@+id/imageView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="fondo"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/road" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_20"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView19"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="32dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:text="Por Ãºltimo, selecciona la ciudad y la colonia donde vives para mostrarte cupones para ti."
            android:textColor="@color/white"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnCity"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:background="@drawable/border_white"
            android:text="Selecciona tu ciudad"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <AutoCompleteTextView
            android:id="@+id/edtCity"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="32dp"
            android:background="@drawable/border_white"
            android:ems="10"
            android:gravity="center"
            android:hint="Selecciona tu ciudad"
            android:inputType="textPersonName"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:visibility="gone" />

        <AutoCompleteTextView
            android:id="@+id/edtCol"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="32dp"
            android:background="@drawable/border_white"
            android:ems="10"
            android:gravity="center"
            android:hint="Escribe tu colonia"
            android:inputType="textPersonName"
            android:textColor="@color/white"
            android:textColorHint="@color/white" />

        <br.com.simplepass.loading_button_lib.customViews.CircularProgressButton
            android:id="@+id/btnContinue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="32dp"
            android:background="@drawable/button_facebook"
            android:gravity="center"
            android:text="Guardar"
            android:textAllCaps="false"
            android:textColor="@color/white"
            app:initialCornerAngle="35dp" />
    </LinearLayout>
</RelativeLayout>