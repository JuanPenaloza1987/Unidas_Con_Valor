<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <android.support.constraint.ConstraintLayout
        android:id="@+id/tarjetacerra"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fondorojo"
        android:orientation="vertical"
        tools:context=".TarjetaCerrar">

        <TextView
            android:id="@+id/txtCerrar"
            android:layout_width="332dp"
            android:layout_height="38dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:clickable="true"
            android:drawableLeft="@android:drawable/ic_menu_close_clear_cancel"
            android:text="Cerrar"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/imageView18"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.564"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView18"
            android:layout_width="92dp"
            android:layout_height="109dp"
            android:layout_marginStart="160dp"
            android:layout_marginEnd="160dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtCerrar"
            app:srcCompat="@drawable/escudochih" />

        <TextView
            android:id="@+id/txtMsg"
            android:layout_width="336dp"
            android:layout_height="80dp"
            android:layout_marginStart="38dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="38dp"
            android:baselineAligned="false"
            android:text="Estámos contigo, Tu alerta se enviará a Fiscalía General del Estado y a tus contactos en… "
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            app:layout_constraintBottom_toTopOf="@+id/progressBarToday"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView18"
            app:layout_constraintVertical_bias="0.51" />

        <ProgressBar
            android:id="@+id/progressBarToday"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="267dp"
            android:layout_centerInParent="true"
            android:layout_marginStart="69dp"
            android:layout_marginEnd="69dp"
            android:indeterminate="false"
            android:max="98"
            android:padding="0dp"
            android:progress="100"
            android:progressDrawable="@drawable/circular_progress_bar"
            app:layout_constraintBottom_toTopOf="@+id/btnCancelar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtMsg" />

        <TextView
            android:id="@+id/textTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="45sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/progressBarToday"
            app:layout_constraintEnd_toEndOf="@+id/progressBarToday"
            app:layout_constraintStart_toStartOf="@+id/progressBarToday"
            app:layout_constraintTop_toTopOf="@+id/progressBarToday" />

        <Button
            android:id="@+id/btnCancelar"
            android:layout_width="180dp"
            android:layout_height="53dp"
            android:layout_marginStart="116dp"
            android:layout_marginEnd="116dp"
            android:background="@drawable/button_rounded_rojo"
            android:text="Cancelar"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/imgUnidos"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/progressBarToday"
            app:layout_constraintVertical_bias="0.533" />

        <ImageView
            android:id="@+id/imgUnidos"
            android:layout_width="210dp"
            android:layout_height="82dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="100dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnCancelar"
            app:srcCompat="@drawable/logounidos" />

    </android.support.constraint.ConstraintLayout>
</ScrollView>